# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_data_system
DB_USER=stock_user
DB_PASSWORD=stock_password

# PostgreSQL superuser password (required for database creation)
POSTGRES_PASSWORD=postgres

# Custom database storage location (optional)
# If not specified, uses PostgreSQL default data directory
# Example for Windows: D:\PostgreSQL\Data
# Example for Linux: /var/lib/postgresql/data
# DB_DATA_DIR=

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=8000

# API Configuration
# API key to be sent in 'X-API-KEY' header
API_KEY=change_me_example_key

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
# Phase 2 advanced batch processing (default: true)
# Set to false to disable Phase 2 batch execution database tracking
ENABLE_PHASE2=true
